{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "price": {
      "type": "component",
      "component": "common.price",
      "repeatable": false
    },
    "nutrition": {
      "type": "component",
      "component": "common.nutrition",
      "repeatable": false
    },
    "bages": {
      "type": "component",
      "component": "common.badge",
      "repeatable": true
    },
    "inStock": {
      "type": "boolean"
    },
    "featured": {
      "type": "boolean"
    }
  }
}
